{
  "compilerOptions": {
    "jsx": "preserve",
    "moduleResolution": "Node",
    "target": "ES2018",
    "lib": [
      "dom",
      "esnext"
    ],
    "esModuleInterop": true,
    "downlevelIteration": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "./node_modules",
    "./scripts",
    "./dist"
  ]
}
